
{-# LANGUAGE TemplateHaskell, ExistentialQuantification #-}

module Helio.Common
  ( BotM
  , Color(..)
  , CommandInfo(..)
  , ownerOnly
  , args
  , commandArgs
  , name
  , description
  , neededRoles
  , neededPermissions
  , Handler
  , Command(..)
  , BotConfig(..)
  , embedColor
  , token
  , ownerIds
  , deleteMessages
  , prefix
  , BotState(..)
  , config
  , commands
  , Args
  , (<$$>)
  , message
  , conn
  , (.:)
  , Hook(..)
  , hooks
  , ArgType(..)
  )
where

import Control.Monad.State
import Control.Monad.Except
import Control.Lens
import qualified Data.Text as T
import Discord.Internal.Types (Snowflake)
import Discord.Internal.Types.Channel (Message)
import Discord (DiscordHandle)
import qualified Data.Map as M


  
data Color = Color Int Int Int
  deriving Show

type Args = [String]

data ArgType

type BotM = StateT BotState (ExceptT String IO)

data Hook 
  = BeforeMessage (BotM ())
  | AfterMessage (BotM ())
  | Firewall (BotM Bool)

data CommandInfo = CommandInfo
  { _ownerOnly :: Bool
  , _commandArgs :: [ArgType]
  , _name :: String
  , _description :: Maybe String
  , _neededRoles :: [String]
  , _neededPermissions :: [String]
  , _hooks :: [Hook] }
makeLenses ''CommandInfo

type Handler = [String] -> BotM T.Text
data Command = Command CommandInfo Handler


data BotConfig = BotConfig
  { _embedColor :: Color
  , _token :: String
  , _ownerIds :: [Snowflake]
  , _deleteMessages :: Bool
  , _prefix :: String }

data BotState = BotState
  { _config :: BotConfig
  , _commands :: M.Map String Command
  , _args :: Args
  , _message :: Message
  , _conn :: DiscordHandle }

makeLenses ''BotConfig
makeLenses ''BotState

(<$$>) :: (Functor f1, Functor f2) => (a -> b) -> f1 (f2 a) -> f1 (f2 b)
(<$$>) = fmap . fmap

(.:) :: (c -> d) -> (a -> b -> c) -> (a -> b -> d)
f .: g = \ a b -> f (g a b)




